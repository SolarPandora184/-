<script>
  // Show the privacy policy modal
  function openPrivacyPolicy() {
    document.getElementById('privacyPolicyPopup').style.display = 'flex';
  }

  // Close the privacy policy modal
  function closePrivacyPolicy() {
    document.getElementById('privacyPolicyPopup').style.display = 'none';
  }

  // Cookies popup logic
  window.onload = function() {
    // Show success messages based on query params (optional)
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('success') === '1') {
      showSuccessMessage('successMessage');
    } else if (urlParams.get('success') === '2') {
      showSuccessMessage('reviewSuccessMessage');
    }

    // Show cookies popup if not accepted
    if (!localStorage.getItem('cookiesAccepted')) {
      document.getElementById('cookiesPopup').style.display = 'flex';
    }
  };

  function showSuccessMessage(id) {
    const msg = document.getElementById(id);
    if (msg) {
      msg.style.display = 'block';
      setTimeout(() => { msg.style.display = 'none'; }, 4000);
    }
  }

  document.getElementById('acceptCookies').addEventListener('click', function() {
    localStorage.setItem('cookiesAccepted', 'true');
    document.getElementById('cookiesPopup').style.display = 'none';
  });
</script>
